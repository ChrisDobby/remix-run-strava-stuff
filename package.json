{
  "name": "remix-starter-express",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "postinstall": "tsc -b",
    "build": "cross-env NODE_ENV=production yarn run css:build && remix build && tsc -b",
    "dev": "concurrently \"yarn run css:watch\" \"remix run\" \"tsc -b -w --preserveWatchOutput\" \"cross-env NODE_ENV=development nodemon -w app -w build -w data-build -e js,jsx,ts,tsx,md,mdx server.js\"",
    "start": "node server.js",
    "css:watch": "postcss styles --base styles --dir app/ -w",
    "css:build": "postcss styles --base styles --dir app/ --env production"
  },
  "dependencies": {
    "@remix-run/cli": "^0.8.1",
    "@remix-run/data": "^0.8.1",
    "@remix-run/express": "^0.8.1",
    "@remix-run/react": "^0.8.1",
    "@types/dateformat": "^3.0.1",
    "cookie-parser": "^1.4.5",
    "dateformat": "^4.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "form-data": "^3.0.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^6.0.0-beta.0",
    "react-router-dom": "^6.0.0-beta.0",
    "tailwindcss": "^2.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "autoprefixer": "^10.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "nodemon": "^2.0.5",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">=12"
  }
}